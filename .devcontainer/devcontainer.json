// For format details, see https://aka.ms/devcontainer.json. For config options, see the
// README at: https://github.com/devcontainers/templates/tree/main/src/java
{
	"name": "Java",
	// Or use a Dockerfile or Docker Compose file. More info: https://containers.dev/guide/dockerfile
	"image": "mcr.microsoft.com/devcontainers/java:1-21-bullseye",
	"features": {
		"ghcr.io/devcontainers/features/java:1": {
			"installGradle": true,
			"installMaven": true,
			"installAnt": true,
			"version": "17",
			"jdkDistro": "ms",
			"gradleVersion": "7.5.1",
			"mavenVersion": "3.8.6",
			"antVersion": "1.10.12"
		},
		"ghcr.io/devcontainers/features/common-utils:2": {
			"configureZshAsDefaultShell": true,
			"installZsh": true,
			"installOhMyZsh": true,
			"installOhMyZshConfig": true,
			"upgradePackages": true,
			"username": "vscode",
			"userUid": "1001",
			"userGid": "1001"
		},
		"ghcr.io/devcontainers-contrib/features/fish-apt-get:1": {},
		"ghcr.io/devcontainers-contrib/features/zsh-plugins:0": {
			"plugins": "git mvn",
			"omzPlugins": "https://github.com/zsh-users/zsh-autosuggestions",
			"username": "vscode"
		}
	},
	"customizations": {
		"vscode": {
			"extensions": [
				"redhat.vscode-xml",
				"redhat.fabric8-analytics"
			]
		}
	},
	"mounts": [
		// "source=profile,target=/home/vscode,type=volume",
		// "source=profile-RDFProcessingToolkit,target=/home/vscode,type=volume",
		// "source=profile-RDFProcessingToolkit,target=/home/devcontainer,type=volume",
		// "target=/home/vscode/.vscode-server,type=volume",
		// "target=/home/vscode/.vscode-server,type=volume",
		// "target=/home/devcontainer/.vscode-server,type=volume"
	],
	// Use 'forwardPorts' to make a list of ports inside the container available locally.
	// "forwardPorts": [],
	// Use 'postCreateCommand' to run commands after the container is created.
	// "postCreateCommand": "java -version",
	// Configure tool-specific properties.
	// "customizations": {},
	// Uncomment to connect as root instead. More info: https://aka.ms/dev-containers-non-root.
	// "remoteUser": "root"
}
